<%-include("../includes/boilerplate.ejs")%>

<body>
  <div class="offset-3 form col-6">
    <h1>Login</h1>
    <form method="post" action="/login" novalidate class="needs-validation">
      <div class="form-group">
        <label for="username">Username</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          placeholder="enter name"
        />
      </div>
      <div class="form-group">
        <label for="title">Password</label>
        <input
          class="form-control"
          type="password"
          id="title"
          name="password"
          placeholder="enter password"
          required
        />
      </div>
      <button class="btn btn-success mt-2">Login</button>
    </form>
  </div>

  <script src="../../js/script.js"></script>
</body>
